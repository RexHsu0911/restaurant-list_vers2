<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="d-grid gap-2 text-center px-4">
      <a class="btn btn-warning mx-5 mb-5" href="/restaurants/new" role="button">Create</a>
    </div>
    </div>
    <div class="col-sm-10 col-12 mx-auto">
      <div class="row row-cols-md-3">
        {{#each restaurants}}
        <div class="col">
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>{{this.category}}
                </div>

                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

              </div>
              <div class="card-footer text-center px-0">
                <div class="btn btn-group-sm px-0">
                  <a class="btn btn-outline-primary m-1" href="/restaurants" role="button">Edit</a>
                  <a class="btn btn-outline-success m-1" href="/restaurants/{{this.id}}" role="button">Detail</a>
                  <a class="btn btn-outline-danger m-1" href="/restaurants" role="button">Delete</a>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
</div>