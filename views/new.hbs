<!-- restaurant create -->
<h1 class="mb-1 restaurant-show-title text-center">Create restaurant</h1>
<div class="container">
  <form action="/restaurants" method="POST">
    <div class="row justify-content-center">
      <div class="card m-3" style="width: 100rem;">
        <div class="card-body">
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Name:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" name="name" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">English Name:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" name="name_en">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Category:</label>
            <div class="col-sm-12">
              {{!-- <input type="text" class="form-control" name="category" required> --}}
              <select class="form-select" aria-label="Default select example" name="category" required>
                <option selected disabled hidden>Choose one category</option>
                <option value="中東料理">中東料理</option>
                <option value="日本料理">日本料理</option>
                <option value="義式餐廳">義式餐廳</option>
                <option value="美式">美式</option>
                <option value="酒吧">酒吧</option>
                <option value="咖啡">咖啡</option>
              </select>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Image Url:</label>
            <div class="col-sm-12">
              <input type="url" class="form-control" placeholder="https://example.com" name="image">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Location:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" name="location" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Phone:</label>
            <div class="col-sm-12">
              <input type="tel" class="form-control" pattern="[0-9]{2} [0-9]{4} [0-9]{4}" placeholder="02 1234 5678" name="phone" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Google Map Url:</label>
            <div class="col-sm-12" required>
              <input type="url" class="form-control" placeholder="https://goo.gl/maps/example" name="google_map">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Rating:</label>
            <div class="col-sm-12">
              <input type="number" min="0" max="5" step="0.1" class="form-control" placeholder="0~5" name="rating" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Description:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" name="description">
            </div>
          </div>

          <div class="col-auto text-center">
            <button type="submit" class="btn btn-primary mb-3 ">Save</button>
          </div>
        </div>
      </div>
    </div>
  </form>

</div>