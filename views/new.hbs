  <form action="/restaurants" method="POST">
    <div class="row justify-content-center">
      <div class="card m-3" style="width: 100rem;">
        <div class="card-body">
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Name:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" name="name">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">English Name:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" >
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-5 col-form-label">Category:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" >
